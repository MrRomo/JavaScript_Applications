
<div class="row">
    <div class="col-md-4">
        <div class="container p-4">
            <div class="card mx-auto text-center">
                <div class="card-header">
                    <h5>Este es tu perfil</h5>
                </div>
                <div class="card-body">
                    <p class="m-2">Nombre: {{user.fullname}}</p>
                    <p class="m-2">Usuario: {{user.username}}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="container p-4">
            <div class="row">
                {{#each links}}
                <div class="col-md-3 mb-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <a href="{{url}}" target="_blank">
                                <h3 class="card-title text-uppercase">{{title}}</h3>
                            </a>
                            <p class="m-2">{{timeago created_at}}</p>
                            <p class="m-2">{{description}}</p>
                            <a href="/links/delete/{{id}}" class="btn btn-danger">Detele Link</a>
                            <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="col-md-3 mx-auto">
                    <div class="card card-body text-center mx-auto">
                        <p>No hay links guardados aun</p>
                        <a href="/links/add">Crea uno</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>