<div class="card">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i>  Delete
        </button>
    </div>
    <div class="card-body">
        <div class="text-center">
            <img class="img-fluid" src="/public/upload/{{image.filename}}" alt="">
        </div>
        <p class="mt-3">{{image.description}}</p>
    </div>
    <div class="card-footer d-flex justify-content-between aling-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p>
            <i class="far fa-clock"></i> {{timeAgo image.date}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h5>Comentarios</h5>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Agregar un comentario
        </button>
    </div>
    <div class="card-body">
        <blockquote id="postComment">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombre" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Tu comentario" required></textarea>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Comentar
                    </button>
                </div>                
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="" class="col text-center">
                            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                        </a>
                        <blockquote>
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquote-footer"> 
                                {{name}} - {{timeAgo date}}
                            </footer>
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>